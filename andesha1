                const data = await response.json();
                
                if (data.success) {
                    currentUserId = userId;
                    localStorage.setItem('userId', userId);
                    displayData(data.data);
                    startMonitoring();
                } else {
                    showError('ID Ù†Û•Ø¯Û†Ø²Ø±Ø§ÛŒÛ•ÙˆÛ•');
                }
            } catch (error) {
